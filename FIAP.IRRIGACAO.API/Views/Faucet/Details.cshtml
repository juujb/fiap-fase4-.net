@model FIAP.IRRIGACAO.API.ViewModels.FaucetViewModel

<h1 class="mb-4">Detalhes da Torneira</h1>
<hr class="mb-4" />

<div class="card shadow-sm p-4">
    <div class="mb-3">
        <h5 class="card-title">Nome:</h5>
        <p class="card-text">@Model.Name</p>
    </div>

    <div class="mb-3">
        <h5 class="card-title">Status:</h5>
        <p class="card-text">
            @(Model.IsEnabled ? "Ativada" : "Desativada")
        </p>
    </div>

    <div class="mb-3">
        <h5 class="card-title">Local:</h5>
        <p class="card-text">@Model.LocationName</p>
    </div>
</div>

<div class="mt-4">
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Atualizar</a>
</div>