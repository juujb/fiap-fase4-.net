@model IEnumerable<FaucetModel>

<div class="container mt-4">
    <h1 class="mb-4">Lista de Torneiras</h1>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a class="btn btn-primary" asp-controller="Faucet" asp-action="Create">Nova Torneira</a>
    </div>

    @if (!string.IsNullOrEmpty(TempData["mensagemSucesso"]?.ToString()))
    {
        <div class="alert alert-success" role="alert">@TempData["mensagemSucesso"]</div>
    }

    <table class="table table-bordered table-hover table-striped">
        <thead class="table-primary">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Nome do Local</th>
                <th scope="col">Status</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Location.Name</td>
                    <td>
                        <span class="badge @(item.IsEnabled ? "bg-success" : "bg-danger")">
                            @(item.IsEnabled ? "Ligada" : "Desligada")
                        </span>
                    </td>
                    <td>
                        <div class="d-flex gap-2">
                            <a class="btn btn-sm btn-outline-primary"
                               asp-controller="Faucet"
                               asp-action="Edit"
                               asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-sm btn-outline-info"
                               asp-controller="Faucet"
                               asp-action="Detail"
                               asp-route-id="@item.Id">Consultar</a>
                            <a class="btn btn-sm btn-outline-danger"
                               asp-controller="Faucet"
                               asp-action="Delete"
                               asp-route-id="@item.Id">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>