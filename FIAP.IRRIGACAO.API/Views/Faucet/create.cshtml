@model FaucetModel
<h1 class="mb-4">Nova Torneira</h1>
<hr class="mb-4" />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" asp-controller="Faucet" class="p-4 border rounded shadow-sm bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="LocationId" class="form-label">Localização</label>
                <input type="number" min="1" asp-for="LocationId" class="form-control" />
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>

            <div class="form-check form-switch mb-3">
                <input asp-for="IsEnabled" class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" />
                <label asp-for="IsEnabled" class="form-check-label" for="flexSwitchCheckChecked">Ativar Torneira</label>
            </div>

            <div class="d-grid">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</div>
