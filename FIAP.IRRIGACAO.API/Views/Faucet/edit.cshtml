@model FIAP.IRRIGACAO.API.ViewModels.FaucetViewModel
<h1 class="mb-4">Atualizar Torneira</h1>
<hr class="mb-4" />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" asp-controller="Faucet" class="p-4 border rounded shadow-sm bg-light">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Nome</label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Insira o nome da torneira" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LocationId" class="form-label">Local</label>
                <select asp-for="LocationId" asp-items="@ViewBag.LocationList" class="form-select">
                    <option value="">Selecione</option>
                </select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>

            <div class="form-check form-switch mb-3">
                <input type="checkbox" id="IsEnabledSwitch" class="form-check-input" asp-for="IsEnabled" />
                <label asp-for="IsEnabled" class="form-check-label" for="IsEnabledSwitch">Ativar Torneira</label>
            </div>

            <div class="d-grid">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</div>
